# Redis конфигурация для Anomer Backend

# Основные настройки
bind 0.0.0.0
port 6379
timeout 0
tcp-keepalive 300

# Настройки безопасности
requirepass ${REDIS_PASSWORD}

# Настройки производительности
maxmemory 256mb
maxmemory-policy allkeys-lru

# Логирование
loglevel notice
logfile ""

# Сохранение данных
save 900 1
save 300 10
save 60 10000

# Настройки сети
tcp-backlog 511 